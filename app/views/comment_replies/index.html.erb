<p id="notice"><%= notice %></p>

<h1>Comment Replies</h1>

<table>
  <thead>
    <tr>
      <th>Reply</th>
      <th>Content</th>
      <th>User</th>
      <th>Flag delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comment_replies.each do |comment_reply| %>
      <tr>
        <td><%= comment_reply.reply_id %></td>
        <td><%= comment_reply.content %></td>
        <td><%= comment_reply.user_id %></td>
        <td><%= comment_reply.flag_delete %></td>
        <td><%= link_to 'Show', comment_reply %></td>
        <td><%= link_to 'Edit', edit_comment_reply_path(comment_reply) %></td>
        <td><%= link_to 'Destroy', comment_reply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment Reply', new_comment_reply_path %>
